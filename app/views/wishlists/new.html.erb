<div data-role="page">

	<div data-role="header collapsible">
		<img id="icon" src="<%= @pic %>">
	</div>
	<!-- closes header div -->

<%= form_for @wishlist do |f| %>
		<%= f.label :title %>
	  	<%= f.text_field :title %>
	  
		<%= f.label :date %>
		<%= f.text_field :date, id: "datepicker"%>

		<%= f.label :description %>
		<%= f.text_area :description %>

		<%= f.label :type %>

<!-- <fieldset data-role="controlgroup">
	<input type="radio" id="christmas" name="kind" value="christmas"> 
		<label for="christmas"> Christmas</label><br>
	<input type="radio" id="birthday" name="kind" value="birthday"> 
		<label for="birthday"> birthday</label><br>
	<input type="radio" id="other" name="kind" value="other"> 
		<label for="other"> other</label><br>
</fieldset> -->

	<fieldset data-role="controlgroup">

	  	<div class="radiofield">
	  	<%= f.radio_button(:kind, "christmas", id: "radio-choice-1")%>
	  	<div class="radiolabel"> Christmas </div>
	  	</div>

	  	<div class="radiofield">
	  	<%= f.radio_button(:kind, "birthday", id: "radio-choice-2") %>
	  	<div class="radiolabel"> Birthday </div>
	  	</div>

	  	<div class="radiofield">
	  	<%= f.radio_button(:kind, "other", id: "radio-choice-3") %>
	  	<div class="radiolabel"> Other </div>

</div>
	 </fieldset>
	<!-- closes controlgroup fieldset -->
	<button>
	  <%= f.submit 'Generate', :class => 'submitbutton' %>
	  </button>
	<br>
<% end %>
<!-- closes form -->

 <%= link_to "Log out", logout_path %>


<div data-role="footer" data-position="fixed" data-theme=>
    <div data-role="navbar">
      <ul>
        <li><a href="/wishlists" data-icon="bullets"> Wish Lists</a></li>
        <li><a href="/wishlists/new" data-icon="plus">New Wish List</a></li>
        <li><a href="#" data-icon="plus">More Options</a></li>
      </ul>
    </div>
  </div>
</div>
</div>
