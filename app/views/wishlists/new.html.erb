<div data-role="page">

	<div data-role="header collapsible">
		<img src="http://i.imgur.com/jeCawcl.png" id="hamburger">
		<img id="icon" src="<%= @pic %>">
	</div>
	<!-- closes header div -->

<%= form_for @wishlist do |f| %>
		<%= f.label :title %>
	  	<%= f.text_field :title %>
	  
		<%= f.label :date %>
		<%= f.text_field :date, id: "datepicker"%>

		<%= f.label :description %>
		<%= f.text_area :description %>

		<%= f.label :type %>
	<fieldset data-role="controlgroup">

	  	<%= f.radio_button(:kind, "christmas", id: "radio-choice-1")%>
		<%= f.label :description %>Christmas
	 
	  	<%= f.radio_button(:kind, "birthday", id: "radio-choice-2") %> 
		<%= f.label :description %>Birthday

	  	<%= f.radio_button(:kind, "other", id: "radio-choice-3") %> 
		<%= f.label :description %>Other
	 </fieldset>
