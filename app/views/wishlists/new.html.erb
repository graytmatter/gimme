	<div data-role="header collapsible" class="heading">
		<div id="headtitle" class="ui-btn-left">
		new wishlist
		</div>
		<img id="icon" class ="ui-btn-right" src="<%= @pic %>">
	</div>
	<!-- closes header div -->

<%= form_for @wishlist do |f| %>
