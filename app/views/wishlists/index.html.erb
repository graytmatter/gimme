<h1>All Wishlists</h1>

<% @wishlists.each do |wish| %>
<div class='wishlist'>
  <p><%= wish.title %></p>
  <a href="<%= edit_wishlist_path(wish.id)%>">Edit Wishlist</a>
  <%= form_for wish, method: "DELETE"  do |f| %>
  <%= submit_tag("Delete Wishlist") %>
  <% end %>

</div>
<br>
<% end %>

<!-- slide menu panel -->
<div class="menu" id="menu">
<ul>
  <li><a href="#">View claimed items</a></li>
  <li><%= link_to "Log out", logout_path %></li>
</ul>
</div>

<div data-role="footer" data-position="fixed" data-tap-toggle="false">
    <div data-role="navbar">
      <ul>
