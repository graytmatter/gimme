
<!-- Entire list item. Has the click listener. Id = the id of the item. -->
<li class="listitem" id="{{id}}">

	<!-- Wrapper for all of the list item's things (title, img, descrip, link) -->
	<div class="listcontents">
	
	<!-- item title -->
		<div class="itemlisttitle">
		{{name}}
		</div>
	<!-- item image -->
		{{#if pic}}
		<img class="listpic smlistpic ui-li-icon" src="{{pic}}">
		{{/if}}

	<!-- Wrapper for additional item info, shown onclick-->
		<div class="hide listinfo">
			{{#if description}}
				{{description}}<br>
			{{else}}
				nothing to see here!<br>
			{{/if}}
			{{#if url}}
				<a href="{{url}}" target="_blank">view online</a>
			{{/if}}
		</div>
		<!-- closes additional info div -->
	</div>
	<!-- close listhead -->
</li>
<!-- close entire list item -->

<script>



//ACCORDION FUNCTION
$('.listitem').click(function() {

	var dis = $(this).find('.listinfo');
	var dispic = $(this).find('.listpic');
//add hide class to all other descriptions

	if (dis.hasClass('hide')) {

		$('.listinfo').each(function() {
			$(this).addClass('hide');
		});
		$('.listpic').each(function() {
			$(this).addClass('smlistpic');
		});
		$('.listitem').each(function() {
			$(this).css('height', '65px');
		});

		dispic.removeClass('smlistpic');
		dispic.addClass('biglistpic');
		dis.removeClass('hide');
		$(this).css('height', '160px');
	}

});
</script>